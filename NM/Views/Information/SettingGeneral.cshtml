@model NM.SetingSystem
@{
    ViewBag.Title = "SettingGeneral";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

 <div class="panel-wrapper"> 
        	<div class="panel">
            <div class="title"> 
                <h4><strong>Hiển thị sản phẩm</strong></h4> 
                <div class="collapse">thu gọn lại</div> 
            </div>
        	<div class="content"> <!-- ## Panel Content  -->
            	<form id="formthemsanpham" method="post" action="/Information/UpdatePageSize" enctype="multipart/form-data" > 
                	  
                    <div class="group fixed"> <label>Nội dung thông tin</label> <input type="number" name="pageSize" value ="@Model.PageSize" required /> </div>
                                 
                    <center> <input type="submit" class="button-blue" value="Cập nhật"></center>
                    
				</form>
			<!-- ## / Panel Content  --> </div> 

        	</div>
        	<div class="shadow"></div> 
        </div>

 <div class="panel-wrapper"> 
        	<div class="panel">
            <div class="title"> 
                <h4><strong>Logo hiển thị</strong></h4> 
                <div class="collapse">thu gọn lại</div> 
            </div>
        	<div class="content"> <!-- ## Panel Content  -->
            	<form id="formcapnhatlogo" method="post" action="/Information/UpdateLogo" enctype="multipart/form-data" > 
                	  
                    <div class="group fixed"> <label>Nội dung thông tin</label> <input type="file" name="file" /> </div>
                                 <img src="../../@Model.Logo" width="60" />
                    <center> <input type="submit" class="button-blue" value="Cập nhật"></center>
                    
				</form>
			<!-- ## / Panel Content  --> </div> 

        	</div>
        	<div class="shadow"></div> 
        </div>

