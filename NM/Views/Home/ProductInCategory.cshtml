
@model IEnumerable<NM.SelectProductOfCategoryResult>
@{
    Layout = "~/Views/shared/_layoutProductInCategory.cshtml";
    
}


@if (int.Parse(Session["View"].ToString()) == 2)
{
    <div id="mainShowProduct">
        @{int count = 1;

          foreach (var item in Model)
          {
                    <div class="list-deal-o1">  
