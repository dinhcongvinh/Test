@model IEnumerable<NM.Adventiser>
@{
    ViewBag.Title = "Adventiser";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="content spacing"><a href="/Adventiser/AddAdventiser"  class="button-blue">Thêm khuyến mãi</a></div>
        
         <div id="divthemloaihang" class="panel-wrapper" style="margin-top:25px;"> 
        
		</div>
        	<div class="shadow"></div> 
        
        <div  class="panel-wrapper" style="margin-top:25px;"> 
        	<div class="panel">
            <div class="title"> 
                <h4><strong>Danh sách chương trình khuyến mãi</strong></h4> 
                <div class="collapse">thu gọn lại</div> 
            </div>
        	<div class="content"> <!-- ## Panel Content  -->
            	<table id="sample-table-sortable" class="sortable resizable">
                	<thead><tr>
                    	<th>STT</th>
                        <th>Tên chương trình </th>
                        <th>Hình ảnh</th>
                        <th>Chỉnh sửa</th>
                        <th>Xóa</th>
					</tr></thead> 
                    <tbody>
                    @{
                        int i = 1;
                        foreach (var item in Model)
                        {
                             <tr>
                    	    <td>@(i++)</td>
                            <td>@item.NameAdventiser</td>
                            <td><img height="20" width="20" src="../../@item.Images" /></td>
                            <td><a href="/Adventiser/EditAdventiser?idAdventiser=@item.IDAdventiser" >Chỉnh sửa</a></td>
                            <td> <a href="/Adventiser/DeleteAdventiser?idAdventiser=@item.IDAdventiser">Xóa</a>
                            </td>
                            </tr>                        
                        }
                    }
                   
                  </tbody>
				</table>  
			<!-- ## / Panel Content  --> </div> 
		</div>
        	<div class="shadow"></div> 
        </div>
		
        <div class="notice warning" style="margin-top:25px;"><span><strong>Lưu ý:</strong>Chương trình quảng cáo hiện tại ngoài website</span> </div>
                
    