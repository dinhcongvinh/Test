}
<script>

    function DeleteImages(nameImage, count)
    {
        if (confirm('Bạn thật sự muốn xóa hình này'))
        {
            var url = "/ImagesHandle/DeleteImages?nameImages=" + nameImage;
            alert(url);
            $('#'+count).load();
            $('#' + count).hide();
        }
        else
        {
           
        }
    }

</script>
 <div class="panel-wrapper"> 
        	<div class="panel">
