				</form>
                @{ int count =0 ; 
                    foreach (var item in (List<string>)ViewData["listImages"])
                    {
                        <div class="ItemImages" id="@count">
                            <img src="../../Images/@item.ToString()" style="width:100px; height:100px;" width="100" height="100" /> 
                            
                            <br />
                            <input type="text" value="@item.ToString()" /> 
                       </div>
                    
                        count++;
