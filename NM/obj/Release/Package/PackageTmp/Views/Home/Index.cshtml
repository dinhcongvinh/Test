<style>

    .itemdc1 {
        color:white!important;
    }
    .itemdc2 {
        color:#ffd800!important;
    }
    .itemdc3 {
        color:#ffd800!important;
    }
</style>
<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<script>

    function LoadPages(i) {
        var url = '/Home/Paging?pagenumber=' + i;
        $('#mainShowProduct').load(url);
        $('.item_colections').removeClass("item_colections").addClass("item_colection");
        $('#' + i).addClass("item_colections");
    }

    function LoadPagesCBO() {
        var imageName = $('#imagessleted').val();
        var url = '/Home/Paging?pagenumber=' + imageName;
        $('#mainShowProduct').load(url);
    }

</script>

     
    <select id="imagessleted" class="styled-select"  onchange="LoadPagesCBO()">
        @for (int number = 1; number <= (int)ViewBag.pagenumber; number++)
        {
            <option  value="@number">@number</option>                       
        }           
    </select>
    

<div style="clear:both"></div>
@if (int.Parse(Session["View"].ToString()) == 2)
{
    <div id="mainShowProduct">
        @{int count = 1;

          foreach (var item in Model)
          {
                    <div class="list-deal-o1">  
			            <section class="deal deal-img product-offer">   
				            <a href="/Home/ProductDetail/@item.AliasCategory/@item.AliasProduct/@item.IDProduct" class="aImgDeal1">            
					            <h1>        
					            <img class="imagessProduct" width="180" height="180" src="~/@item.ImagesLogoProduct" alt="@item.NamesProduct" style="display: block;">        
					            </h1>  
                            
				            </a>
				   
				            <span class=""></span>    
				            <div class="offer-detail1">          
					            <div class="info-offer">     
						            <div>	
                                        <br />							
							            <div class="bg_title1">                      
								            <a class="tit ltit" href="/Home/ProductDetail/@item.AliasCategory/@item.AliasProduct/@item.IDProduct"> 
									            <h1>@item.NamesProduct</h1>             
								            </a> 
							            </div>   
                                        <br />
							            <a class="info">  &nbsp; &nbsp;  &nbsp;                
								            <span class="p_info1">               
									            <span class="icon_price"></span>                          
